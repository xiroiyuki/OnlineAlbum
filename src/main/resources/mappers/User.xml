<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.fc.dao.UserDao">
    <select id="login" resultType="cn.fc.bean.User" parameterType="cn.fc.bean.User">
        SELECT *
        FROM `user`
        WHERE username = #{username} AND password = #{password}
    </select>

    <select id="selectById" resultType="cn.fc.bean.User" parameterType="long">
        SELECT *
        FROM `user`
        WHERE id = #{id}
    </select>

    <update id="update" parameterType="cn.fc.bean.User">
        UPDATE `user` SET
        <trim suffixOverrides=",">
            <if test="username != null">
                username = #{username},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
        </trim>
        <where>
            id=#{id}
        </where>
    </update>
</mapper>