<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.fc.dao.RoleAuthorityDao">
    <insert id="insert" parameterType="cn.fc.bean.RoleAuthority">
        insert into role_authority (ROLE_ID, AUTHORITY_ID)
        values (#{role.id}, #{authority.id})
    </insert>
    <delete id="delete" parameterType="int">
        delete from role_authority
        where ROLE_ID = #{roleid}
    </delete>
    <delete id="deleteAuthority" parameterType="long">
        delete from role_authority
        where AUTHORITY_ID = #{id}
    </delete>
    <select id="select" parameterType="long">
        select *
        from role_authority
        where AUTHORITY_ID = #{roleId}
    </select>
</mapper>