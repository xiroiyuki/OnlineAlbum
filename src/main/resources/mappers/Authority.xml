<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.fc.dao.AuthorityDao">
    <insert id="insert" parameterType="cn.fc.bean.Authority">
        insert into authority (name, url)
        values (#{name}, #{url})
    </insert>
    <select id="selectById" parameterType="long" resultType="cn.fc.bean.Authority">
        SELECT
            role.id      AS r_id,
            authority.id AS a_id,
            role.*,
            authority.*
        FROM
            role,
            authority
        where authority.id = #{id}
    </select>
    <select id="select" resultType="authorityMap">
        SELECT
            role.id      AS r_id,
            authority.id AS a_id,
            role.*,
            authority.*
        FROM
            role,
            authority
    </select>
    <delete id="delete" parameterType="int">
        delete from authority
        where id = #{id}
    </delete>
    <update id="update" parameterType="cn.fc.bean.Authority">
        update authority set
        <trim suffixOverrides=",">
            <if test="name != null">
                name = #{name},
            </if>
            <if test="url != null">
                url = #{url},
            </if>
        </trim>
        <where>
            id = #{id}
        </where>
    </update>
    <select id="loadUserAuthority" parameterType="cn.fc.bean.User" resultType="cn.fc.bean.Authority">
        select a.*
        from `user` u, role_authority ra, authority a
        where ra.ROLE_ID = u.ROLE_ID and a.id = ra.AUTHORITY_ID and u.id = #{id}
    </select>

    <resultMap id="authorityMap" type="cn.fc.bean.Authority">
        <id property="id" column="a_id"/>
        <result property="name" column="name"/>
        <result property="url" column="url"/>
        <collection property="roles" ofType="cn.fc.bean.Role">
            <id property="id" column="r_id"/>
            <result property="roleName" column="rolename"/>
        </collection>
    </resultMap>
</mapper>