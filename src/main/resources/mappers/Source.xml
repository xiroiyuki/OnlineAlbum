<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.fc.dao.SourceDao">
    <select id="select" resultMap="SourceList">
        SELECT *
        FROM source
    </select>

    <update id="update" parameterType="cn.fc.bean.Source">
        UPDATE source SET
        <trim suffixOverrides=",">
            <if test="name != null">
                name = #{name},
            </if>
            <if test="url != null">
                url = #{url},
            </if>
        </trim>
        <where>
            id = #{id}
        </where>
    </update>

    <resultMap id="SourceList" type="cn.fc.bean.Source">
        <id column="id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="url" property="url" jdbcType="VARCHAR"/>
        <association property="albums" column="id" javaType="java.util.List" select="cn.fc.dao.AlbumDao.selectBySource"/>
    </resultMap>
</mapper>