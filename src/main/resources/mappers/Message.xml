<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.fc.dao.MsgDao">
    <insert id="insert" parameterType="cn.fc.bean.Message">
        INSERT INTO message (title, content) VALUES (#{title}, #{content})
    </insert>

    <delete id="delete" parameterType="long">
        DELETE FROM message
        WHERE id = #{id}
    </delete>

    <update id="publish" parameterType="cn.fc.bean.Message">
        UPDATE message
        SET state = 1
        WHERE id = #{id}
    </update>

    <update id="withdraw" parameterType="cn.fc.bean.Message">
        UPDATE message
        SET state = -1
        WHERE id = #{id}
    </update>

    <select id="select" resultType="cn.fc.bean.Message">
        SELECT
            *,
            publish_time AS publishTime
        FROM message
    </select>

    <select id="selectById" parameterType="long" resultType="cn.fc.bean.Message">
        SELECT
            *,
            publish_time AS publishTime
        FROM message
        WHERE id = #{id}
    </select>

    <update id="update" parameterType="cn.fc.bean.Message">
        UPDATE message SET
        <trim suffixOverrides=",">
            <if test="title != null">
                title = #{title},
            </if>
            <if test="content != null">
                content = #{content},
            </if>
        </trim>
        <where>
            id = #{id}
        </where>
    </update>

</mapper>